<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/layout_session_info"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layoutwatch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_label_date"
            android:layout_width="0dp"
            android:layout_weight=".49"
            android:layout_height="wrap_content"
            android:text="ساعت:"
            android:gravity="right"
            android:textSize="18sp"
            android:textColor="@color/navigationBarColor"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:text="۱۳۹۷-۱۲-۱۷ ۰۹:۵۰:۰۰"
            android:textSize="17sp"
            android:gravity="right"
            android:textColor="@color/grey_"
            android:paddingRight="10dp"
            />




    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutCapacity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:weightSum="2"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_label_Capacity"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="wrap_content"
            android:text="ظرفیت:"
            android:gravity="right"
            android:textSize="18sp"
            android:textColor="@color/navigationBarColor"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/tv_capacity"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:text="qwerty"
            android:textSize="17sp"
            android:gravity="right"
            android:textColor="@color/grey_"
            android:paddingRight="10dp"
            />




    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutCost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:weightSum="2"

        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_label_Cost"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="wrap_content"
            android:text="هزینه:"
            android:gravity="right"
            android:textSize="18sp"
            android:textColor="@color/navigationBarColor"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/tv_cost"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:text="business owner 1"
            android:textSize="17sp"
            android:gravity="right"
            android:textColor="@color/grey_"
            android:paddingRight="10dp"
            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutreservedby"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:gravity="end"
        android:orientation="horizontal"
        >

        <!--<ImageView-->
            <!--android:id="@+id/img_edit"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:src="@drawable/ic_edit_black_24dp"-->
            <!--android:padding="5dp"-->
            <!--/>-->

        <ImageView
            android:id="@+id/img_delet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_delete_black_24dp"
            android:padding="5dp"

            />



    </LinearLayout>


</LinearLayout>