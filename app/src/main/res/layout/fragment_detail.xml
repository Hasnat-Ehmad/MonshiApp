        android:backgroundTintMode="src_in"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/container_toolbar"
        tools:targetApi="lollipop" />

    <View
        android:id="@+id/sperator_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_business_state"/>-->


        <TextView
            android:id="@+id/tv_label_minute_service"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="@string/str_service_time"
            android:textColor="@color/navigationBarColor"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinner_staff" />

        <TextView
            android:id="@+id/tv_minute_service"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/grey_"
            android:padding="8dp"
            android:text="30 min"
            android:textColor="@color/navigationBarColor"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_label_minute_service" />

        <TextView
            android:id="@+id/tv_label_amount_service"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="@string/str_service_price"
            android:textColor="@color/navigationBarColor"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_minute_service" />

        <TextView
            android:id="@+id/tv_amount_service"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/grey_"
            android:padding="8dp"
            android:text="IRR 100"
            android:textColor="@color/navigationBarColor"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_label_amount_service" />

        <TextView
            android:id="@+id/tv_label_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="@string/str_description"
            android:textColor="@color/navigationBarColor"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_amount_service" />

        <EditText
            android:id="@+id/ed_description"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/grey_border"
            android:gravity="top|right"
            android:text=""
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_label_description" />

        <TextView
            android:id="@+id/tv_label_continous_booking"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/str_repeat"
            android:textColor="@color/navigationBarColor"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ed_description" />

        <ToggleButton
            android:id="@+id/toggle_repeat"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/toggle_slider"
            android:checked="false"
            android:padding="5dp"
            android:textOff=""
            android:textOn=""
            app:layout_constraintStart_toEndOf="@+id/tv_label_continous_booking"
            app:layout_constraintTop_toBottomOf="@+id/ed_description" />

        <LinearLayout
            android:id="@+id/layout_repeat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="6"
            app:layout_constraintEnd_toEndOf="@+id/ed_description"
            app:layout_constraintStart_toStartOf="@+id/ed_description"
            app:layout_constraintTop_toBottomOf="@+id/toggle_repeat">

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/spinner_recursive_booking"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:backgroundTint="@color/colorPrimaryDark"
                android:backgroundTintMode="src_in"
                android:entries="@array/spinner_repeat" />

            <TextView
                android:id="@+id/tv_label_to"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:gravity="center"
                android:text="@string/str_to"
                android:textColor="@color/navigationBarColor"
                android:textSize="18sp" />

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/spinner_recursive_duration"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.4"
                android:backgroundTint="@color/colorPrimaryDark"
                android:backgroundTintMode="src_in"
                android:entries="@array/spinner_time"
                tools:targetApi="lollipop" />

            <TextView
                android:id="@+id/tv_label_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:gravity="center"
                android:text="@string/str_year"
                android:textColor="@color/navigationBarColor"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_dummy_lines"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="6"
            app:layout_constraintEnd_toEndOf="@+id/ed_description"
            app:layout_constraintStart_toStartOf="@+id/ed_description"
            app:layout_constraintTop_toBottomOf="@+id/layout_repeat">

            <View
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_weight="3"
                android:background="@color/grey_light" />

            <View
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_weight="0.8" />

            <View
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_weight="1.3"
                android:background="@color/grey_light" />

            <View
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_weight="0.8" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_countinue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/colorPrimaryDark"
            android:text="@string/str_continue"
            android:textColor="@color/textColorPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>