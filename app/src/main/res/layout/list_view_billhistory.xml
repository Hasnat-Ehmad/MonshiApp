<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layoutreference"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal"
        >


        <TextView
            android:id="@+id/tv_reference"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:text="MA-35?"
            android:textSize="17sp"
            android:gravity="right"
            android:textColor="@color/grey_"
            android:paddingRight="10dp"
            />

        <TextView
            android:id="@+id/tv_label_reference"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="wrap_content"
            android:text="@string/str_billing_id"
            android:gravity="right"
            android:textSize="18sp"
            android:textColor="@color/navigationBarColor"
            android:textStyle="bold"
            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutcost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:weightSum="2"
        android:orientation="horizontal"
        >


        <TextView
            android:id="@+id/tv_cost"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:text="IRR 5,532.00"
            android:textSize="17sp"
            android:gravity="right"
            android:textColor="@color/grey_"
            android:paddingRight="10dp"
            />

        <TextView
            android:id="@+id/tv_label_cost"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="wrap_content"
            android:text="@string/str_billing_price"
            android:gravity="right"
            android:textSize="18sp"
            android:textColor="@color/navigationBarColor"
            android:textStyle="bold"
            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutcondition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:weightSum="2"
        android:orientation="horizontal"
        >


        <TextView
            android:id="@+id/tv_condition"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:text="Received"
            android:textSize="17sp"
            android:gravity="right"
            android:textColor="@color/grey_"
            android:paddingRight="10dp"
            />

        <TextView
            android:id="@+id/tv_label_condition"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="wrap_content"
            android:text="@string/str_billing_payment"
            android:gravity="right"
            android:textSize="18sp"
            android:textColor="@color/navigationBarColor"
            android:textStyle="bold"
            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:weightSum="2"
        android:orientation="horizontal"
        >


        <TextView
            android:id="@+id/tv_date"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:text="۱۳۹۷-۱۲-۱۷ ۰۹:۵۰:۰۰"
            android:textSize="17sp"
            android:gravity="right"
            android:textColor="@color/grey_"
            android:paddingRight="10dp"
            />

        <TextView
            android:id="@+id/tv_label_date"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="wrap_content"
            android:text="@string/str_billing_date"
            android:textSize="18sp"
            android:textColor="@color/navigationBarColor"
            android:textStyle="bold"
            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutdesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:weightSum="2"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:text="description text"
            android:textSize="17sp"
            android:gravity="right"
            android:textColor="@color/grey_"
            android:paddingRight="10dp" />

        <TextView
            android:id="@+id/tv_label_action"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:text="@string/str_description"
            android:textSize="18sp"
            android:textColor="@color/navigationBarColor"
            android:textStyle="bold"
            />


    </LinearLayout>

</LinearLayout>