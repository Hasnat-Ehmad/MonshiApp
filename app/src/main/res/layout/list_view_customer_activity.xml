<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layoutdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_label_date"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="wrap_content"
            android:text="تاریخ:"
            android:gravity="right"
            android:textSize="18sp"
            android:textColor="@color/navigationBarColor"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/tv_date"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:text="۱۳۹۷-۱۲-۱۷ ۰۹:۵۰:۰۰"
            android:textSize="17sp"
            android:gravity="right"
            android:textColor="@color/grey_"
            android:paddingRight="10dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutbusiness"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:weightSum="2"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_label_business"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="wrap_content"
            android:text="کسب و کار:"
            android:gravity="right"
            android:textSize="18sp"
            android:textColor="@color/navigationBarColor"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/tv_business"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:text="business 1-1"
            android:textSize="17sp"
            android:gravity="right"
            android:textColor="@color/grey_"
            android:paddingRight="10dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutservice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:weightSum="2"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_label_service"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="wrap_content"
            android:text="اسم سرویس:"
            android:gravity="right"
            android:textSize="18sp"
            android:textColor="@color/navigationBarColor"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/tv_service"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:text="servicve2-1"
            android:textSize="17sp"
            android:gravity="right"
            android:textColor="@color/grey_"
            android:paddingRight="10dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutstaff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:weightSum="2"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_label_staff"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="wrap_content"
            android:text="کارکنان:"
            android:gravity="right"
            android:textSize="18sp"
            android:textColor="@color/navigationBarColor"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/tv_staff"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:text="staff"
            android:textSize="17sp"
            android:gravity="right"
            android:textColor="@color/grey_"
            android:paddingRight="10dp"

            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutdescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:weightSum="2"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_label__description"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="wrap_content"
            android:text="توضیحات:"
            android:textSize="18sp"
            android:textColor="@color/navigationBarColor"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:text="customer book in"
            android:textSize="17sp"
            android:gravity="right"
            android:textColor="@color/grey_"
            android:paddingRight="10dp"
            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutcost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:weightSum="2"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_label_cost"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="wrap_content"
            android:text="هزینه:"
            android:gravity="right"
            android:textSize="18sp"
            android:textColor="@color/navigationBarColor"
            android:textStyle="bold"
            />


        <TextView
            android:id="@+id/tv_cost"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:text="تکمیل شده"
            android:textSize="17sp"
            android:gravity="right"
            android:textColor="@color/grey_"
            android:paddingRight="10dp"
            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutranking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:weightSum="2"
        android:orientation="horizontal"
        android:visibility="visible"
        >

        <TextView
            android:id="@+id/tv_label_ranking"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="wrap_content"
            android:text="رتبه بندی:"
            android:gravity="right"
            android:textSize="18sp"
            android:textColor="@color/navigationBarColor"
            android:textStyle="bold"
            />

        <RatingBar
            android:id="@+id/ratingBar"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="0dp"
            android:layout_weight=".42"
            android:layout_height="wrap_content"
            android:progressTint="@color/gold"
            android:progressBackgroundTint="@color/gold"
            android:secondaryProgressTint="@color/gold"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:isIndicator="false"
            android:numStars="5"
            android:rating="5"
            android:scaleX="1"
            android:scaleY="1"
            app:layout_constraintBottom_toBottomOf="@+id/toggle_favorite"
            app:layout_constraintStart_toStartOf="@+id/tv_business_description"
            app:layout_constraintTop_toTopOf="@+id/toggle_favorite"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutdotss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:weightSum="2"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_labeldots"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="----"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/navigationBarColor"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutrankingbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:weightSum="2"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_ranking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/str_ranking"
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="@color/colorPrimaryDark"
            />

    </LinearLayout>

</LinearLayout>