<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layoutDirection="rtl"
        tools:context=".fragments.MenuFragment">

        <!-- TODO: Update blank fragment layout -->

        <TextView
            android:id="@+id/tv_signin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_exit_to_app_colored_24dp"
            android:drawableLeft="@drawable/ic_exit_to_app_colored_24dp"
            android:drawableEnd="@drawable/ic_keyboard_arrow_left_colored_24dp"
            android:drawableRight="@drawable/ic_keyboard_arrow_left_colored_24dp"
            android:drawablePadding="10dp"
            android:padding="12dp"
            android:text="@string/login"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_light" />

        <TextView
            android:id="@+id/tv_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_signup_colored_36dp"
            android:drawableLeft="@drawable/ic_signup_colored_36dp"
            android:drawableEnd="@drawable/ic_keyboard_arrow_left_colored_24dp"
            android:drawableRight="@drawable/ic_keyboard_arrow_left_colored_24dp"
            android:drawablePadding="10dp"
            android:padding="12dp"
            android:text="@string/signup"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_light" />


        <TextView
            android:id="@+id/tv_contact_us"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_mail_outline_black_24dp"
            android:drawableLeft="@drawable/ic_mail_outline_black_24dp"
            android:drawableEnd="@drawable/ic_keyboard_arrow_left_colored_24dp"
            android:drawableRight="@drawable/ic_keyboard_arrow_left_colored_24dp"
            android:drawablePadding="10dp"
            android:padding="12dp"
            android:text="@string/str_contact_us"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_light" />

        <TextView
            android:id="@+id/tv_privacy_policy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_privacy_policy_24dp"
            android:drawableLeft="@drawable/ic_privacy_policy_24dp"
            android:drawableEnd="@drawable/ic_keyboard_arrow_left_colored_24dp"
            android:drawableRight="@drawable/ic_keyboard_arrow_left_colored_24dp"
            android:drawablePadding="10dp"
            android:padding="12dp"
            android:text="@string/str_privacy_policy"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_light" />

        <TextView
            android:id="@+id/tv_tutorial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_privacy_policy_24dp"
            android:drawableLeft="@drawable/ic_privacy_policy_24dp"
            android:drawableEnd="@drawable/ic_keyboard_arrow_left_colored_24dp"
            android:drawableRight="@drawable/ic_keyboard_arrow_left_colored_24dp"
            android:drawablePadding="10dp"
            android:padding="12dp"
            android:text="@string/str_tutorial"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_light" />

        <TextView
            android:id="@+id/tv_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_exit_to_app_colored_24dp"
            android:drawableLeft="@drawable/ic_exit_to_app_colored_24dp"
            android:drawablePadding="10dp"
            android:padding="12dp"
            android:text="@string/str_logout"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_light" />
