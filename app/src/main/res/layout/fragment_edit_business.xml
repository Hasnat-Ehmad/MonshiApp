            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:drawableLeft="@drawable/dashboard_c"
            android:drawableStart="@drawable/dashboard_c"
            android:padding="12dp"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/ic_keyboard_arrow_left_colored_24dp"
            android:drawableEnd="@drawable/ic_keyboard_arrow_left_colored_24dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_light"
            />

        <TextView
            android:id="@+id/tv_manage_staff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
